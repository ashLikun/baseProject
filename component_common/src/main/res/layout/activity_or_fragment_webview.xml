<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ashlikun.supertoobar.SuperToolBar
        android:id="@+id/toolbar"
        style="@style/SuperToolBar.Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"></com.ashlikun.supertoobar.SuperToolBar>

    <com.ashlikun.xwebview.webview.XWebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.ashlikun.xwebview.webview.XWebView>


</LinearLayout>
