<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <com.ashlikun.supertoobar.SupperToolBar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.ashlikun.supertoobar.SupperToolBar>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/oldPasswordTil"
        style="@style/TextInputLayout.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        app:counterEnabled="true"
        app:counterMaxLength="20">

        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:hint="旧密码"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/edittext_cursor_main_color"
            android:textSize="@dimen/dp_14" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordTil1"
        style="@style/TextInputLayout.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        app:counterEnabled="true"
        app:counterMaxLength="20">

        <EditText
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:hint="新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/dp_14" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordTil2"
        style="@style/TextInputLayout.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        app:counterEnabled="true"
        app:counterMaxLength="20">

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:hint="确认新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_5"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/dp_14" />

    </android.support.design.widget.TextInputLayout>

    <com.ashlikun.flatbutton.FlatButton xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/amend"
        style="@style/FlatButton.EntityPrimary"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:onClick="onClick"
        android:padding="@dimen/dp_10"
        android:text="确定" />


</LinearLayout>
