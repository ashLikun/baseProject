<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="FlatButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="colorRipple">@color/gray_66</item>
        <item name="colorPressed">@color/gray_cc</item>
        <item name="clickDelay">200</item>
    </style>

    <style name="FlatButton.StrokePrimary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="colorNormal">@color/white</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="FlatButton.StrokePrimary_Black">
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingRight">@dimen/dp_10</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorNormal">@color/translucent</item>
        <item name="cornerRadius">@dimen/dp_10</item>
        <item name="strokeColor">@color/black</item>
        <item name="android:textSize">@dimen/dp_15</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

    <style name="FlatButton.EntityPrimary">
        <item name="android:textColor">@color/white</item>
        <item name="colorNormal">@color/colorPrimary</item>
        <item name="colorPressedText">@color/text_color</item>
        <item name="colorEnableText">@color/text_color</item>
        <item name="colorPressed">@color/gray_cc</item>
        <item name="colorEnable">@color/gray_cc</item>
        <item name="colorRipple">@color/gray_cc</item>
        <item name="android:textSize">@dimen/dp_15</item>
    </style>




    <!--***************************************AnimCheckBox**************************************************-->
    <style name="CheckBoxGroup">
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="abg_textColor">@color/colorPrimary</item>
        <item name="abg_textNoSelectColor">@color/gray_99</item>
    </style>

    <style name="CheckBoxGroup.SHIFOU">
        <item name="abg_texts">是|否</item>
    </style>


    <!--***************************************EditText**************************************************-->
    <!--***************************************EditText**************************************************-->
    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor_main_color</item>
        <item name="android:textSize">@dimen/dp_15</item>
    </style>

    <style name="EditText.NullBack">
        <item name="android:background">@null</item>
    </style>

    <!--TextInputLayout 里面的Edittext设置-->
    <style name="TextInputEditText" parent="EditText">
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="TextInputEditText.MinHeight100">
        <item name="android:minHeight">@dimen/dp_100</item>
        <item name="android:gravity">top</item>
    </style>

    <style name="EditText.NullBack.Publish">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">0dp</item>
    </style>

</resources>