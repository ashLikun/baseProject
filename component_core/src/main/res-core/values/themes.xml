<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="BaseTheme"></style>
    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar"></style>
    <style name="BaseTheme.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/statusColorCustom</item>
        <item name="android:navigationBarColor">@color/translucent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/activity_backgound</item>
        <item name="android:listSelector">@color/translucent</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorSecondary">@color/black_33</item>
        <item name="android:textColorTertiary">@color/black_4b</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:textColorHighlight">@color/black_33</item>
        <!--Bar默认高度-->
        <item name="android:actionBarSize">@dimen/stb_default_height</item>
        <item name="alertDialogTheme">@style/BaseAlertDialogTheme</item>
        <item name="android:alertDialogTheme">@style/BaseAlertDialogTheme</item>
        <item name="dialogTheme">@style/BaseDialogTheme</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:dialogTheme">@style/BaseDialogTheme</item>
        <!--<item name="android:requiresFadingEdge">vertical</item>-->
        <item name="colorError">@color/design_textinput_error_color_light</item>
        <item name="statusColorCustom">@color/statusColorCustom</item>

        <item name="SwipeRefreshLayout_Color1">@color/colorPrimary</item>
        <item name="SwipeRefreshLayout_Color2">@color/colorPrimary</item>
        <item name="SwipeRefreshLayout_Color3">@color/colorPrimary</item>
        <item name="SwipeRefreshLayout_Color4">@color/colorPrimary</item>


        <!--vector 根据theme动态改变颜色 android:fillColor="?attr/svgColor1"-->
        <item name="svgColor1">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PhotoHander">
        <item name="android:statusBarColor">@color/statusColorCustom</item>
        <item name="android:windowAnimationStyle">@style/OtherAnimation</item>
        <item name="colorPrimary">@color/statusColorCustom</item>
    </style>
    <!--背景颜色白色-->
    <style name="AppTheme.OtherTheme.White">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AppTheme.MainTheme">
        <item name="android:windowAnimationStyle">@style/MainAnimation</item>
    </style>


    <style name="AppTheme.OtherTheme">
        <item name="android:windowAnimationStyle">@style/OtherAnimation</item>
    </style>


    <style name="AppTheme.Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="AppTheme.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.Fullscreen.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/translucent</item>
    </style>

    <style name="AppTheme.PhotoBrowse">
        <item name="android:windowBackground">@color/photo_browse</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationPreview</item>
    </style>

    <style name="BaseDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:textColor">@color/black_33</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:background">@color/activity_backgound</item>
        <item name="android:buttonStyle">@style/BaseDialogButtonStyle</item>
        <item name="android:textColorPrimary">@color/black_33</item>
    </style>


    <style name="BaseAlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black_33</item>
        <item name="textColorAlertDialogListItem">@color/text_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/text_color</item>
        <item name="buttonBarButtonStyle">@style/BaseDialogButtonStyle</item>
        <item name="android:windowTitleStyle">@style/BaseDialogTitleStyle</item>
    </style>

    <style name="Dialog.NoAnim">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>